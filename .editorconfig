# EditorConfig is awesome: https://EditorConfig.org

# 顶层的EditorConfig文件应用到所有文件
root = true

# 适用的文件扩展名
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4  # 将缩进大小设为 4

# JavaScript文件
[*.js]
indent_style = space
indent_size = 4  # 将缩进大小设为 4

# TypeScript文件
[*.ts]
indent_style = space
indent_size = 4  # 将缩进大小设为 4

# JSON文件
[*.json]
indent_style = space
indent_size = 4  # 将缩进大小设为 4

# HTML文件
[*.html]
indent_style = space
indent_size = 4  # 将缩进大小设为 4

# CSS文件
[*.css]
indent_style = space
indent_size = 4  # 将缩进大小设为 4

# Markdown文件
[*.md]
trim_trailing_whitespace = false